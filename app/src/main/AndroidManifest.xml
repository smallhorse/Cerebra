<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ubtrobot.cerebra">
    <uses-permission android:name="com.ubtrobot.master.permission.MASTER"/>

    <application
        android:name=".CerebraApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <service
            android:name=".CerebraService"
            android:enabled="true"
            android:exported="true"></service>

        <service android:name=".WakeupEventReceiver">
            <intent-filter>
                <category android:name="master.intent.category.SUBSCRIBER" />
                <action android:name="com.ubtrobot.event.action.WAKEUP"/>
            </intent-filter>
        </service>
    </application>

</manifest>
